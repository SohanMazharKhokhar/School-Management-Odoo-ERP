<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- noupdate="1" prevents overwriting on module update -->

        <record id="ir_cron_check_overdue_fees" model="ir.cron">
            <field name="name">School: Check Overdue Fees &amp; Send Reminders</field>
            <field name="model_id" ref="model_school_student_fee"/>
            <field name="state">code</field>
            <!-- **** TEMPORARILY CALLING TEST METHOD **** -->
            <field name="code">model._test_cron_call()</field>
            <!-- **************************************** -->
            <field name="user_id" ref="base.user_root"/> <!-- Run as admin -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field> <!-- Run daily -->
            <field name="numbercall">-1</field> <!-- Run indefinitely -->
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
