<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_subject_tree" model="ir.ui.view">
            <field name="name">school.subject.tree</field>
            <field name="model">school.subject</field>
            <field name="arch" type="xml">
                <tree string="Subjects">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_school_subject_form" model="ir.ui.view">
            <field name="name">school.subject.form</field>
            <field name="model">school.subject</field>
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                         <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="[('active', '=', True)]"/>
                         <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Subject Name"/></h1>
                            <field name="code" placeholder="Subject Code"/>
                        </div>
                        </sheet>
                     <div class="oe_chatter" invisible="not context.get('show_chatter', False)">
                         <field name="message_follower_ids"/>
                         <field name="message_ids"/>
                     </div>
                </form>
            </field>
        </record>

        <record id="view_school_subject_search" model="ir.ui.view">
             <field name="name">school.subject.search</field>
             <field name="model">school.subject</field>
             <field name="arch" type="xml">
                 <search string="Search Subjects">
                     <field name="name"/>
                     <field name="code"/>
                     <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                 </search>
             </field>
         </record>

        <record id="action_school_subject" model="ir.actions.act_window">
            <field name="name">Subjects</field>
            <field name="res_model">school.subject</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_school_subject_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define the first subject!
                </p>
            </field>
        </record>

    </data>
</odoo>
