<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_timetable_tree" model="ir.ui.view">
            <field name="name">school.timetable.tree</field>
            <field name="model">school.timetable</field>
            <field name="arch" type="xml">
                <tree string="Timetable">
                    <field name="course_id"/>
                    <field name="day_of_week"/>
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                    <field name="duration"/>
                    <field name="teacher_id" optional="show"/> <field name="class_id" optional="show"/> <field name="classroom" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_school_timetable_form" model="ir.ui.view">
            <field name="name">school.timetable.form</field>
            <field name="model">school.timetable</field>
            <field name="arch" type="xml">
                <form string="Timetable Entry">
                    <sheet>
                        <group>
                            <group>
                                <field name="course_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="day_of_week"/>
                                <field name="classroom"/>
                            </group>
                            <group>
                                <field name="start_time" widget="float_time"/>
                                <field name="end_time" widget="float_time"/>
                                <field name="duration" readonly="1"/> </group>
                        </group>
                        <group string="Related Information (Read-Only)">
                             <field name="teacher_id"/>
                             <field name="class_id"/>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                         <field name="message_follower_ids"/>
                         <field name="message_ids"/>
                     </div>
                </form>
            </field>
        </record>

        <record id="view_school_timetable_search" model="ir.ui.view">
             <field name="name">school.timetable.search</field>
             <field name="model">school.timetable</field>
             <field name="arch" type="xml">
                 <search string="Search Timetable">
                     <field name="course_id"/>
                     <field name="teacher_id"/> <field name="class_id"/> <field name="classroom"/>
                     <field name="day_of_week"/>
                     <group expand="0" string="Group By">
                        <filter string="Day of Week" name="group_by_day" context="{'group_by': 'day_of_week'}"/>
                        <filter string="Class" name="group_by_class" context="{'group_by': 'class_id'}"/>
                        <filter string="Teacher" name="group_by_teacher" context="{'group_by': 'teacher_id'}"/>
                        <filter string="Course" name="group_by_course" context="{'group_by': 'course_id'}"/>
                     </group>
                 </search>
             </field>
         </record>

        <record id="action_school_timetable" model="ir.actions.act_window">
            <field name="name">Timetable</field>
            <field name="res_model">school.timetable</field>
            <field name="view_mode">tree,form</field> <field name="search_view_id" ref="view_school_timetable_search"/>
            <field name="help" type="html">
                <p class="o_view_nocent_smiling_face">
                    Create the first timetable entry!
                </p>
            </field>
        </record>

    </data>
</odoo>
