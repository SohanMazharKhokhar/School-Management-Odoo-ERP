<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_course_tree" model="ir.ui.view">
            <field name="name">school.course.tree</field>
            <field name="model">school.course</field>
            <field name="arch" type="xml">
                <tree string="Courses" decoration-muted="not active">
                    <field name="name"/>
                    <field name="subject_id"/>
                    <field name="class_id"/>
                    <field name="teacher_id"/>
                    <field name="academic_year"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_school_course_form" model="ir.ui.view">
            <field name="name">school.course.form</field>
            <field name="model">school.course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="[('active', '=', True)]"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="subject_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="class_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="teacher_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="academic_year" placeholder="e.g., 2025-2026"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_school_course_search" model="ir.ui.view">
             <field name="name">school.course.search</field>
             <field name="model">school.course</field>
             <field name="arch" type="xml">
                 <search string="Search Courses">
                     <field name="name"/>
                     <field name="subject_id"/>
                     <field name="class_id"/>
                     <field name="teacher_id"/>
                     <field name="academic_year"/>
                     <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                     <group expand="0" string="Group By">
                        <filter string="Subject" name="group_by_subject" context="{'group_by': 'subject_id'}"/>
                        <filter string="Class" name="group_by_class" context="{'group_by': 'class_id'}"/>
                        <filter string="Teacher" name="group_by_teacher" context="{'group_by': 'teacher_id'}"/>
                        <filter string="Academic Year" name="group_by_year" context="{'group_by': 'academic_year'}"/>
                     </group>
                 </search>
             </field>
         </record>

        <record id="action_school_course" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">school.course</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_school_course_search"/>
            <field name="help" type="html">
                <p class="o_view_nocent_smiling_face">
                    Define the first course offering!
                </p>
            </field>
        </record>

    </data>
</odoo>
