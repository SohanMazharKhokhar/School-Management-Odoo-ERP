<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_fee_type_tree" model="ir.ui.view">
            <field name="name">school.fee.type.tree</field>
            <field name="model">school.fee.type</field>
            <field name="arch" type="xml">
                <tree string="Fee Types" decoration-muted="not active">
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="frequency"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_school_fee_type_form" model="ir.ui.view">
            <field name="name">school.fee.type.form</field>
            <field name="model">school.fee.type</field>
            <field name="arch" type="xml">
                <form string="Fee Type">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="[('active', '=', True)]"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g., Tuition Fee"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="frequency"/>
                            </group>
                        </group>
                        </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_school_fee_type_search" model="ir.ui.view">
             <field name="name">school.fee.type.search</field>
             <field name="model">school.fee.type</field>
             <field name="arch" type="xml">
                 <search string="Search Fee Types">
                     <field name="name"/>
                     <field name="frequency"/>
                     <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                     <group expand="0" string="Group By">
                        <filter string="Frequency" name="group_by_frequency" context="{'group_by': 'frequency'}"/>
                     </group>
                 </search>
             </field>
         </record>

        <record id="action_school_fee_type" model="ir.actions.act_window">
            <field name="name">Fee Types</field>
            <field name="res_model">school.fee.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_school_fee_type_search"/>
            <field name="help" type="html">
                <p class="o_view_nocent_smiling_face">
                    Define the first type of fee (e.g., Tuition, Bus)!
                </p>
            </field>
        </record>

    </data>
</odoo>
