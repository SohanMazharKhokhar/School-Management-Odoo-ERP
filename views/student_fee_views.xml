<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_student_fee_tree" model="ir.ui.view">
            <field name="name">school.student.fee.tree</field>
            <field name="model">school.student.fee</field>
            <field name="arch" type="xml">
                <tree string="Student Fees" decoration-info="status=='draft'" decoration-warning="status=='due'" decoration-success="status=='paid'" decoration-muted="status=='cancelled'">
                    <field name="student_id"/>
                    <field name="fee_type_id"/>
                    <field name="amount_due"/>
                    <field name="due_date"/>
                    <field name="frequency"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_school_student_fee_form" model="ir.ui.view">
            <field name="name">school.student.fee.form</field>
            <field name="model">school.student.fee</field>
            <field name="arch" type="xml">
                <form string="Student Fee">
                  <header>
                         <button name="action_mark_as_due" string="Mark as Due" type="object" class="oe_highlight"/>
                         <button name="action_mark_as_paid" string="Mark as Paid" type="object" class="oe_highlight"/>
                         <button name="action_cancel" string="Cancel Fee" type="object"/>
                         <button name="action_reset_to_draft" string="Reset to Draft" type="object"/>
                         <field name="status" widget="statusbar" statusbar_visible="draft,due,paid"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                                <field name="fee_type_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="amount_due"/>
                                <field name="due_date"/>
                                <field name="frequency"/> </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_school_student_fee_search" model="ir.ui.view">
             <field name="name">school.student.fee.search</field>
             <field name="model">school.student.fee</field>
             <field name="arch" type="xml">
                 <search string="Search Student Fees">
                     <field name="student_id"/>
                     <field name="fee_type_id"/>
                     <field name="due_date"/>
                     <field name="status"/>
                     <separator/>
                     <filter string="Draft" name="filter_draft" domain="[('status', '=', 'draft')]"/>
                     <filter string="Due" name="filter_due" domain="[('status', '=', 'due')]"/>
                     <filter string="Paid" name="filter_paid" domain="[('status', '=', 'paid')]"/>
                     <filter string="Cancelled" name="filter_cancelled" domain="[('status', '=', 'cancelled')]"/>
                     <separator/>
                     <filter string="Due This Month" name="filter_due_this_month"
                             domain="[('due_date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                      ('due_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                     <group expand="0" string="Group By">
                        <filter string="Student" name="group_by_student" context="{'group_by': 'student_id'}"/>
                        <filter string="Fee Type" name="group_by_fee_type" context="{'group_by': 'fee_type_id'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                        <filter string="Due Month" name="group_by_due_month" context="{'group_by': 'due_date:month'}"/>
                     </group>
                 </search>
             </field>
         </record>

        <record id="action_school_student_fee" model="ir.actions.act_window">
            <field name="name">Student Fees</field>
            <field name="res_model">school.student.fee</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_school_student_fee_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocent_smiling_face">
                    Record the first student fee!
                </p>
            </field>
        </record>

    </data>
</odoo>