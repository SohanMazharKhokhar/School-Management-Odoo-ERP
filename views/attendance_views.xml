<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_attendance_tree" model="ir.ui.view">
            <field name="name">school.attendance.tree</field>
            <field name="model">school.attendance</field>
            <field name="arch" type="xml">
                <tree string="Attendance Records" decoration-danger="status=='absent'" decoration-warning="status=='late'" decoration-muted="status=='excused'">
                    <field name="student_id"/>
                    <field name="date"/>
                    <field name="status"/>
                    <field name="timetable_id" optional="show"/>
                    <field name="remarks" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_school_attendance_form" model="ir.ui.view">
            <field name="name">school.attendance.form</field>
            <field name="model">school.attendance</field>
            <field name="arch" type="xml">
                <form string="Attendance Record">
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                                <field name="date"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="timetable_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="remarks"/>
                            </group>
                        </group>
                    </sheet>
                    </form>
            </field>
        </record>

        <record id="view_school_attendance_search" model="ir.ui.view">
             <field name="name">school.attendance.search</field>
             <field name="model">school.attendance</field>
             <field name="arch" type="xml">
                 <search string="Search Attendance">
                     <field name="student_id"/>
                     <field name="date"/>
                     <field name="status"/>
                     <field name="timetable_id"/>
                     <separator/>
                     <filter string="Present" name="filter_present" domain="[('status', '=', 'present')]"/>
                     <filter string="Absent" name="filter_absent" domain="[('status', '=', 'absent')]"/>
                     <filter string="Late" name="filter_late" domain="[('status', '=', 'late')]"/>
                     <filter string="Excused" name="filter_excused" domain="[('status', '=', 'excused')]"/>
                     <separator/>
                     <filter string="Today" name="filter_today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                     <filter string="This Month" name="filter_this_month"
                             domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                      ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                     <group expand="0" string="Group By">
                        <filter string="Student" name="group_by_student" context="{'group_by': 'student_id'}"/>
                        <filter string="Date" name="group_by_date" context="{'group_by': 'date:day'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                        <filter string="Timetable Slot" name="group_by_timetable" context="{'group_by': 'timetable_id'}"/>
                        </group>
                 </search>
             </field>
         </record>

        <record id="action_school_attendance" model="ir.actions.act_window">
            <field name="name">Attendance</field>
            <field name="res_model">school.attendance</field>
            <field name="view_mode">tree,form</field> <field name="search_view_id" ref="view_school_attendance_search"/>
            <field name="context">{'search_default_today': 1}</field> <field name="help" type="html">
                <p class="o_view_nocent_smiling_face">
                    Record the first attendance entry!
                </p>
            </field>
        </record>

    </data>
</odoo>
