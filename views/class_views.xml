<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_school_class_tree" model="ir.ui.view">
            <field name="name">school.class.tree</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <tree string="Classes">
                    <field name="name"/>
                    <field name="level"/>
                    <field name="section"/>
                    <field name="class_teacher_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_school_class_form" model="ir.ui.view">
            <field name="name">school.class.form</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <form string="Class">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="[('active', '=', True)]"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Class Name (e.g., Grade 5 - A)"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="level"/>
                                <field name="section"/>
                            </group>
                            <group>
                                <field name="class_teacher_id"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Students" name="students">
                                <field name="student_ids" mode="tree">
                                    <tree editable="bottom">
                                        <field name="roll_number"/>
                                        <field name="name"/>
                                        <field name="gender"/>
                                        <field name="contact_phone"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Students" name="students">
                                <field name="student_ids" mode="tree">
                                    <tree editable="bottom">
                                        <field name="roll_number"/>
                                        <field name="name"/>
                                        <field name="gender"/>
                                        <field name="contact_phone"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Subjects" name="subjects">
<field name="subject_ids" widget="many2many_tags"/>
                            </page>
                            </notebook>
                        </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_school_class_search" model="ir.ui.view">
             <field name="name">school.class.search</field>
             <field name="model">school.class</field>
             <field name="arch" type="xml">
                 <search string="Search Classes">
                     <field name="name"/>
                     <field name="level"/>
                     <field name="section"/>
                     <field name="class_teacher_id"/>
                     <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                     <group expand="0" string="Group By">
                        <filter string="Level" name="group_by_level" context="{'group_by': 'level'}"/>
                        <filter string="Class Teacher" name="group_by_teacher" context="{'group_by': 'class_teacher_id'}"/>
                     </group>
                 </search>
             </field>
         </record>

        <record id="action_school_class" model="ir.actions.act_window">
            <field name="name">Classes</field>
            <field name="res_model">school.class</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_school_class_search"/>
            <field name="help" type="html">
                <p class="o_view_nocent_smiling_face">
                    Define the first class!
                </p>
            </field>
        </record>

    </data>
</odoo>
