<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Teacher Tree/List View -->
        <record id="view_school_teacher_tree" model="ir.ui.view">
            <field name="name">school.teacher.tree</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <tree string="Teachers">
                    <field name="teacher_id"/>
                    <field name="name"/>
                    <field name="contact_phone"/>
                    <field name="contact_email"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Teacher Form View (With Smart Button Integrated) -->
        <record id="view_school_teacher_form" model="ir.ui.view">
            <field name="name">school.teacher.form</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Smart Button for Payslips -->
                            <button class="oe_stat_button" 
                                    type="action"
                                    name="%(action_school_payslip)d"
                                    icon="fa-money"
                                    help="Payslips generated for this teacher">
                                <field name="payslip_count" widget="statinfo" string="Payslips"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="[('active', '=', True)]"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Teacher's Name"/></h1>
                            <field name="teacher_id" placeholder="Teacher ID"/>
                        </div>
                        <group>
                            <group>
                                <field name="date_of_birth"/>
                                <field name="gender"/>
                                <field name="joining_date"/>
                            </group>
                            <group>
                                <field name="contact_phone"/>
                                <field name="contact_email"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Subjects Taught" name="subjects_taught">
                                <field name="subject_ids" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Teacher Search View -->
        <record id="view_school_teacher_search" model="ir.ui.view">
            <field name="name">school.teacher.search</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <search string="Search Teachers">
                    <field name="name"/>
                    <field name="teacher_id"/>
                    <field name="contact_email"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action to open Teacher Views -->
        <record id="action_school_teacher" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">school.teacher</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_school_teacher_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add the first teacher record!
                </p>
            </field>
        </record>

    </data>
</odoo>