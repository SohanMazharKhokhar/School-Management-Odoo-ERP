<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_student_card_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc"> <t t-call="web.external_layout"> <div class="page">
                        <h2>Student Report Card</h2>
                        <p><strong>Student Name:</strong> <span t-field="doc.name"/></p>
                        <p><strong>Roll Number:</strong> <span t-field="doc.roll_number"/></p>
                        <p><strong>Class:</strong> <span t-field="doc.class_id.name"/></p>

                        <h3>Exam Results</h3>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Exam Name</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Marks Obtained</th>
                                    <th>Total Marks</th>
                                    <th>Percentage</th>
                                    <th>Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="results" t-value="request.env['school.exam.result'].search([('student_id', '=', doc.id)])"/>                                
                                    <tr t-foreach="results" t-as="res">
                                    <td><span t-field="res.exam_id.name"/></td>
                                    <td><span t-field="res.exam_id.subject_id.name"/></td>
                                    <td><span t-field="res.exam_id.exam_date" t-options='{"format": "yyyy-MM-dd"}'/></td>
                                    <td><span t-field="res.marks_obtained"/></td>
                                    <td><span t-field="res.total_marks"/></td>
                                    <td><span t-field="res.percentage" t-options='{"widget": "float", "precision": 2}'/>%</td>
                                    <td><span t-field="res.grade"/></td>
                                </tr>
                                <tr t-if="not results">
                                    <td colspan="7">No results found for this student.</td>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                </t>
            </t>
        </t>
    </template>
</odoo>